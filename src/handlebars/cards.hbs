<div class="container">
    <ul class="container movie-list">
        {{#each movies}}
        <li class="list-item" data-movie-id="{{this.id}}">
            <div class="list-item_overlay">
                <img class="list-item_poster" src="https://image.tmdb.org/t/p/w500/{{poster_path}}"
                    alt="{{this.original_title}}" width="270">
            </div>
            <h4 class="list-item_text list-item_title">{{this.original_title}}</h4>
            <div class="list-item_description">
                <p class="list-item_text">{{#each this.genres}}{{this.name}} {{/each}} <span class="bold-line">|</span>
                    {{this.year}}</p>
            </div>
        </li>
        {{/each}}
    </ul>
    <div class="pagination-container">
        <nav aria-label="movie-list_pagination" class="movie-list_pagination">
            <ul class="pagination pagination_list">
                <li class="page-item pagination_button">
                    <a class="pagination-link pagination-link__focus arrow-butt" href="#"><svg id="arrow" class="arrow"
                            viewBox="0 0 512 512" height="15" width="15" xmlns="http://www.w3.org/2000/svg">
                            <path
                                d="m206.812 34.446-206.812 206.673 206.743 206.674 24.353-24.284-165.167-165.167h416.31v-34.445h-416.31l165.236-165.236z">
                            </path>
                        </svg>
                    </a>
                </li>
                <li class="page-item pagination_button">
                    <a class="pagination-link" href="#">
                        <p class="pagination-number">...</p>
                    </a>
                </li>
                <li class="page-item pagination_button">
                    <a class="pagination-link pagination-link__focus" href="#">
                        <p class="pagination-number">1</p>
                    </a>
                </li>
                <li class="page-item pagination_button">
                    <a class="pagination-link pagination-link__focus" href="#">
                        <p class="pagination-number">12</p>
                    </a>
                </li>
                <li class="page-item pagination_button">
                    <a class="pagination-link pagination-link__focus" href="#">
                        <p class="pagination-number">123</p>
                    </a>
                </li>
                <li class="page-item pagination_button">
                    <a class="pagination-link" href="#">
                        <p class="pagination-number">...</p>
                    </a>
                </li>
                <li class="page-item pagination_button">
                    <a class="pagination-link pagination-link__focus arrow-butt rotate" href="#"><svg id="arrow"
                            class="arrow" viewBox="0 0 512 512" height="15" width="15"
                            xmlns="http://www.w3.org/2000/svg">
                            <path
                                d="m206.812 34.446-206.812 206.673 206.743 206.674 24.353-24.284-165.167-165.167h416.31v-34.445h-416.31l165.236-165.236z">
                            </path>
                        </svg>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>